{
  "name": "electron-hotkey-poc",
  "version": "0.1.0",
  "main": "main.js",
  "scripts": {
    "start": "electron . --enable-features=NetworkService",
    "rebuild-iohook": "npm rebuild iohook --update-binary",
    "server:dev": "ts-node server/server.ts",
    "server:start": "node dist/server/server.js",
    "build:server": "tsc -p tsconfig.server.json",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12",
    "node-abi": "^3.51.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@alicloud/pop-core": "^1.8.0",
    "@hurdlegroup/robotjs": "^0.12.3",
    "axios": "^1.7.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "node-global-key-listener": "^0.3.0"
  },
  "build": {
    "appId": "com.example.electronhotkeypoc",
    "mac": {
      "target": "dmg"
    }
  }
}
